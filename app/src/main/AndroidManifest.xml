<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.marsapact.schwapps" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/schwapps"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ImageActivity"
            android:label="@string/title_activity_image"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RecordingActivity"
            android:label="@string/title_activity_recording"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InputActivity"
            android:label="@string/title_activity_input"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MusicActivity"
            android:label="@string/title_activity_music"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CocktailActivity"
            android:label="@string/title_activity_cocktail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Input2Activity"
            android:label="@string/title_activity_input2"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LoadingScreenActivity"
            android:label="@string/title_activity_loading_screen"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>
